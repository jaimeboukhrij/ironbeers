<div class="container">

    {{#each beersRandomInfo}}
    <div class="card border-light mb-3" style="max-width: 1040px; height: 530px">
        <div class="row g-0">
            <div class="col-md-4">
                <img class="cardRandomBeer-img" src="{{image_url}}" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="cardRandomBeer-body">
                    <h5 class="cardRandomBeer-title">{{name}}</h5>
                    <h6 class="cardRandomBeer-tagline">{{tagline}}</h6>
                    <p class="cardRandomBeer-text">{{description}}</p>
                    <div class="food_pairing">
                        <h6 class="cardRandomBeer-titleList">Food Pairing</h6>
                        <ul class="cardRandomBeer-list">
                            {{#each food_pairing}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class=" brewers_tips">

                        <p><strong>Brewes Tips: </strong>{{{brewers_tips}}}</p>
                    </div>

                </div>
            </div>
        </div>
    </div>

    {{/each}}

    </ </div>